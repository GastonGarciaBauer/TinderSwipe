@model TinderSwipe.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" method="post">
    
    <div class="form-group row">
            
        <input type="hidden" asp-for="ReturnUrl" />

        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Email">

        <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Password">

    </div>
    
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Login</button>
            <a asp-controller="SignUp" asp-action="Register" class="btn btn-secondary ml-2">Registrate</a>
        </div>
    </div>

</form>